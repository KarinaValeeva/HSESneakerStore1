<p id="notice"><%= notice %></p>

<!-- <h1>Brands</h1> -->

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= image_tag brand.logo, height: 100%></td>
        <td><%= link_to 'Show', brand, class:'btn btn-secondary'  %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand), class:'btn btn-secondary'   %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-secondary'    %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

